<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <joint name="camera_joint_forks" type="fixed">
        <parent link="lidar"/>
        <child link="camera_link_forks"/>
        <origin xyz="0 0 0.1" rpy="0 0.45 ${pi}"/>
    </joint>

    <joint name="camera_joint_steering" type="fixed">
        <parent link="lidar"/>
        <child link="camera_link_steering"/>
        <origin xyz="0 0 0.1" rpy="0 0.18 0"/>
    </joint>

    <link name="camera_link_forks">
        <visual>
            <geometry>
                <box size="0.010 0.03 0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
        <visual>
            <origin xyz="0 0 -0.05"/>
            <geometry>
                <cylinder radius="0.002" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <link name="camera_link_steering">
        <visual>
            <geometry>
                <box size="0.010 0.03 0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
        <visual>
            <origin xyz="0 0 -0.05"/>
            <geometry>
                <cylinder radius="0.002" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>


    <joint name="camera_optical_joint_forks" type="fixed">
        <parent link="camera_link_forks"/>
        <child link="camera_link_optical_forks"/>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    </joint>

    <link name="camera_link_optical_forks"></link>

    <joint name="camera_optical_joint_steering" type="fixed">
        <parent link="camera_link_steering"/>
        <child link="camera_link_optical_steering"/>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    </joint>

    <link name="camera_link_optical_steering"></link>



    <gazebo reference="camera_link_forks">
        <material>Gazebo/Black</material>

        <sensor name="camera_forks" type="camera">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>60</update_rate>
            <camera>
                <horizontal_fov>1.047</horizontal_fov>
                <image>
                    <format>R8G8B8</format>
                    <width>1280</width>
                    <height>720</height>
                </image>
                <clip>
                    <near>0.05</near>
                    <far>60.0</far>
                </clip>
            </camera>
            <plugin name="camera_controller_fork" filename="libgazebo_ros_camera.so">
                <frame_name>camera_link_optical_forks</frame_name>

            </plugin>
        </sensor>
    </gazebo>

    <gazebo reference="camera_link_steering">
        <material>Gazebo/Black</material>

        <sensor name="camera_steering" type="camera">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>60</update_rate>
            <camera>
                <horizontal_fov>1.047</horizontal_fov>
                <image>
                    <format>R8G8B8</format>
                    <width>1280</width>
                    <height>720</height>
                </image>
                <clip>
                    <near>0.05</near>
                    <far>60.0</far>
                </clip>
            </camera>
            <plugin name="camera_controller_steering" filename="libgazebo_ros_camera.so">
                <frame_name>camera_link_optical_steering</frame_name>

            </plugin>
        </sensor>
    </gazebo>

</robot>